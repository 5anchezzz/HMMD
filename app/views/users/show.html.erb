<div class="container">
  <h2 align="center">My profile</h2>
  <div class="container d-flex justify-content-center mt-4">
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-4" style="display: flex; flex-direction: column; align-items: center; justify-content: flex-start;">

          <% if @user.sex == 'female'
            avatar_image_link = 'https://www.flaticon.com/svg/static/icons/svg/1184/1184396.svg'
          else
            avatar_image_link = 'https://www.flaticon.com/svg/static/icons/svg/1184/1184398.svg'
          end %>

          <img src=<%= avatar_image_link %> class="card-img" alt="...">
          <%= link_to 'Edit access', edit_user_registration_path, class: "btn btn-outline-secondary btn-sm mt-3" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <div class="row no-gutters d-flex justify-content-between">
              <div>
                <h4 class="card-title"><%= @user.name %> <%= @user.surname %></h4>
                <h5 class="card-title"><%= @user.email %></h5>
              </div>
              <div style="display: flex; align-items: flex-end; margin-bottom: .75rem;">
                <% unless @user.state == 'new' %>
                  <a href="<%= edit_user_path %>" style="font-size: 24px;"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                  </svg></a>
                <% end %>
              </div>
            </div>
            <div class="line-separator mb-3"></div>


            <% if @user.state == 'new' %>
              <%= link_to "Complete profile", edit_user_path(current_user), class: "btn btn-primary mb-3" %>
            <% else %>
              <p class="card-text"><span class="font-weight-light text-muted">Birthday: </span><%= @user.birthday.to_date if @user.birthday %></p>
              <% if @user.sex == 'female' %>
                <p class="card-text"><span class="font-weight-light text-muted">Sex: </span>&#9792</p>
              <% elsif @user.sex == 'male' %>
                <p class="card-text"><span class="font-weight-light text-muted">Sex: </span>&#9794</p>
              <% else %>
                <p class="card-text"><span class="font-weight-light text-muted">Sex: </span></p>
              <% end %>
              <p class="card-text"><span class="font-weight-light text-muted">Country: </span><%= @user.country if @user.country %></p>
              <p class="card-text"><span class="font-weight-light text-muted">City: </span><%= @user.city if @user.city %></p>
              <p class="card-text"><span class="font-weight-light text-muted">Organization name: </span><%= @user.organization_name if @user.organization_name %></p>
              <p class="card-text"><span class="font-weight-light text-muted">Field of activity: </span><%= @user.field_of_activity if @user.field_of_activity %></p>
              <p class="card-text"><span class="font-weight-light text-muted">Slot size: </span><%= @user.slot_size if @user.slot_size %></p>
              <p class="card-text"><span class="font-weight-light text-muted">State: </span><%= @user.state if @user.state %></p>
              <p class="card-text font-italic"><%=@user.holiday ? '"I can work at holidays"' : '"I don\'t wanna work at holidays"' %></p>
            <% end %>

            <div class="line-separator"></div>
            <p class="card-text"><small class="text-muted">On HMMD since: <%= @user.created_at.to_date%></small></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>