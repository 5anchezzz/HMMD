<div class="container">
  <h1>Edit Visit</h1>

  <%= form_for @visit, :html => {:class => "form-horizontal center"} do |f| %>

    <div class="form-group">
      <%= f.label :client_id, "Client", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.select(:client_id, @clients.map{|e| [e.full_name, e.id]}, { include_blank: '-- Select One --'}, {required: true}) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :label, "Label (40 symbols max):", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :label, :as => :text, :maxlength => 40, required: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_area :description, required: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date, "Date:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.date_select :date, required: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :start, "Start:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.time_select :start, required: true, class: "form-control", minute_step: 30  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :duration, "Duration:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.select :duration, ALL_DURATIONS, :selected => ALL_DURATIONS.select{ |e| e == f.object.duration }.first, required: true %>
      </div>
    </div>

    <div class="form-group mb-5">
      <%= f.label :value, "Value:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.number_field :value, min: 0, step: 1, class: "form-control" %>
      </div>
    </div>

    <%= link_to "Back", visit_path(@visit), class: "btn btn-outline-primary ml-2" %>
    <%= f.submit "Submit", class: "btn btn-default btn-primary ml-3" %>

  <% end %>




</div>