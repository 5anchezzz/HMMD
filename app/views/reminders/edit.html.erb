<div class="container">
  <h1>Edit Reminder</h1>

  <%= form_for @reminder, :html => {:class => "form-horizontal center"} do |f| %>

    <div class="form-group">
      <%= f.label :label, "* Label (40 symbols max):", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :label, :as => :text, :maxlength => 40, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :days_to_show, "* Days to show:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.number_field :days_to_show, min: 1, step: 1, class: "form-control" %>
      </div>
    </div>


    <%= link_to "Back", visit_path(@reminder.visit), class: "btn btn-outline-secondary ml-2" %>
    <%= f.submit "Submit", class: "btn btn-default btn-secondary ml-3" %>

  <% end %>

</div>